@using ANK13SuperMarket.Entities;
@model List<Product>

<h1>ÜRÜNLER</h1>

@{
    if (!ViewBag.StockDurumu)
    {
        <a asp-action="StoktaOlmayanlariGetir" class="btn btn-danger"> STOKTA OLMAYANLARI GETİR </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-success"> STOKTA OLANLARI GETİR </a>
    }
}

<br>
<br />

<table class="table table-hover table-bordered">
    <tr>
        <td>Ad</td>
        <td>Fiyat</td>
        <td>Stok</td>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Stock
                </td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Sil">Sil</a>
                    <a class="btn btn-primary" asp-route-id="@item.Id" asp-action="Guncelle">Güncelle</a>
                </td>
            </tr>
        }
    }
</table>
